<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mwords">

    <application
        android:allowBackup="true"
        android:icon="@drawable/color_brown"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ColorActivity"
            android:label="COLOR"></activity>
        <activity
            android:name=".PhraseActivity"
            android:label="PHRASES" />
        <activity
            android:name=".FamilyActivity"
            android:label="FAMILY" />
        <activity
            android:name=".NumbersActivity"
            android:label="NUMBERS" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>